{
  "containerDefinitions": [
    {
      "logConfiguration": {
        "logDriver": "json-file"
      },
      "entryPoint": [
        "/bin/bash",
        "/root/entrypoint.sh"
      ],
      "portMappings": [
        {
          "hostPort": 27017,
          "protocol": "tcp",
          "containerPort":27017
        }
      ],
      "command": [],
      "mountPoints": [
        {
          "sourceVolume": "share",
          "containerPath": "/share"
        }
      ],
      "workingDirectory": "/opt",
      "memoryReservation": 1024,
      "volumesFrom": [],
      "image": "035856437156.dkr.ecr.us-east-2.amazonaws.com/dbmongo:latest",
      "essential": true,
      "hostname": "dbmongo",
      "name": "dbmongo"
    }
  ],
  "family": "dbmongo",
  "networkMode": "host",
  "volumes": [
    {
      "name": "share",
      "host": {
        "sourcePath": "/share"
      }
    }
  ]
}
