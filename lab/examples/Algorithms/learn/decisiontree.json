{
  "criterion": {
    "type": "enum-radio",
    "values": ["gini","entropy"],
    "default": "gini"
  },
  "max_depth": {
    "type": "int",
    "default": -1
  },
  "min_samples_split": {
    "type": "int",
    "default": 2 
  },
  "min_samples_leaf": {
    "type": "int",
    "default": 1 
  },
  "min_weight_fraction_leaf": {
    "type": "int",
    "default": 0 
  },
  "min_leaf_nodes": {
